# Quantix Inventory Management System - Environment Configuration Template
# 
# INSTRUCTIONS:
# 1. Copy this file to '.env' in the root directory
# 2. Update the values below with your actual configuration
# 3. Never commit the actual .env file to version control

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

DB_HOST=localhost
DB_NAME=quantix_inventory
DB_USER=your_database_username
DB_PASS=your_database_password
DB_PORT=3306

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

APP_NAME="Quantix Inventory Tracker"
APP_VERSION=1.0.0
BASE_URL=/quantix
ENVIRONMENT=development

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Generate a random secret key (you can use: openssl rand -base64 32)
SECRET_KEY=your-secret-key-here-please-change-this-to-something-random

# Session settings
SESSION_TIMEOUT=3600
PASSWORD_MIN_LENGTH=8

# =============================================================================
# EMAIL SETTINGS (Optional)
# =============================================================================

SMTP_HOST=your-smtp-server.com
SMTP_PORT=587
SMTP_USERNAME=your-email@domain.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME="Quantix Inventory System"
SMTP_ENCRYPTION=tls

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

UPLOAD_PATH=uploads/
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

BACKUP_PATH=backups/
BACKUP_RETENTION_COUNT=30
ENABLE_AUTO_BACKUP=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

ALLOW_REGISTRATION=false
ENABLE_API=true
ENABLE_EMAIL_ALERTS=false

# =============================================================================
# DEBUGGING (Set to false in production)
# =============================================================================

DEBUG_MODE=true
LOG_QUERIES=false
LOG_ERRORS=true

# =============================================================================
# TIMEZONE
# =============================================================================

TIMEZONE=UTC
